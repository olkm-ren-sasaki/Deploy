<%= render 'books/user', user: @user %>
<%= render 'books/book', book: @book %>

<h1>Books</h1>
<table>
 <tr>
  <th>Title</th>
  <th>Opinion</th>
 </tr>
<% @books.each do |book| %>
 <tr>
  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
  <td><%= link_to book.title, "/books/#{book.id}" %></td>
  <td>Opinion</td>
  <td><%= book.body %></td>
 </tr>
 <% end %>
</table>