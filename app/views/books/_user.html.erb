<h1>User info</h1>
 <%= image_tag user.get_profile_image(100,100) %>
<table class="table">
 <tr>
  <th>name</th>  
  <th><%= user.name %></th>
 </tr>
 <tr>
  <th>introduction</th>  
  <th><%= user.introduction %></th>
 </tr>
</table>
<% if user == current_user %>
<div class="row">
  <%= link_to "edit", edit_user_path(user), class: "btn btn-outline-secondary btn-block" %>
  <i class="fas fa-user-cog"></i></div>
<% end %>