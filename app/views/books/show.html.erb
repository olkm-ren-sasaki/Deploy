<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'user', user: @user %>
     <%= render 'book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h1>Book detail</h1>
      <table class="table">
       <tr>
         <td><%= image_tag @user.get_profile_image(100,100) %><br><%= link_to @user.name, "/users/#{@user.id}" %></td>
         <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
         <td><%= @book.body %></td>
         <% if @book.user == current_user %>
         <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success"%></td>
         <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></td>
         <% end %>
       </tr>
      </table>
   </div>
  </div>
</div>